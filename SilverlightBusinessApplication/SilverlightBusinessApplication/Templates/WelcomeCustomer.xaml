<UserControl x:Class="SilverlightBusinessApplication.Templates.WelcomeCustomer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="54"/>
    		<RowDefinition Height="246"/>
    	</Grid.RowDefinitions>
    	<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" TextWrapping="Wrap" Text="Welcome" VerticalAlignment="Top" FontSize="21.333"/>
    	<TextBlock x:Name="TbName" Margin="109,8,8,0" TextWrapping="Wrap" Text="[Name]" VerticalAlignment="Top" FontSize="21.333"/>
    	<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Company:" VerticalAlignment="Top"/>
    	<TextBlock HorizontalAlignment="Left" Margin="26,42,0,0" Grid.Row="1" TextWrapping="Wrap" Text="E-Mail:" VerticalAlignment="Top"/>
    	<TextBlock x:Name="TbCompany" Margin="69,8,8,0" Grid.Row="1" TextWrapping="Wrap" Text="[Company]" VerticalAlignment="Top"/>
    	<TextBlock x:Name="TbEMail" Margin="69,42,8,0" Grid.Row="1" TextWrapping="Wrap" Text="[E-Mail]" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
